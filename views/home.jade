extends layout

block morecss
  != css('home')

block content
  
  h1#main-title Video Digests: A Browsable, Skimmable Format for Informational Lecture Videos
  #what-description Inspired by Bret Victor's presentation  
    a(href="http://worrydream.com/MediaForThinkingTheUnthinkable/") Media for Thinking the Unthinkable
    |, members of the  
    a(href="http://vis.berkeley.edu") VisLab
    |  at U.C. Berkeley created a set of video digest authoring tools.

  #main-video-wrapper
    //iframe(width="640", height="360", src="//www.youtube.com/embed/fTlPJ7f9VsU9", frameborder="0", allowfullscreen)
    a(href="http://vis.berkeley.edu/videodigests/view/The-Power-of-Protyping-expert-Q_YIysi")
